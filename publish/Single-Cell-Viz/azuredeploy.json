{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "username": {
            "maxLength": 20,
            "minlength": 5,
            "type": "string",
            "metadata": {
                "description": "Specify the username that you want to use when you log into the application."
            }
        },
        "password": {
            "type": "securestring",
            "minlength": 5,
            "metadata": {
                "description": "Specify the password that you want to use when you log into the application."
            }
        },
        "Resources": {
            "type": "string",
            "defaultValue": "4-CPUs,16GB-RAM",
            "allowedValues": [
              "4-CPUs,16GB-RAM",
              "8-CPUs,32GB-RAM",
              "16-CPUs,64GB-RAM"
        ],
            "metadata": {
                "description": "The amount of resources provided for the appication to run. More resources will run the application faster, but they will also have a higher cost per hour. The default value is suggested."
            }
        }
    },
    "variables": {
        "virtualMachineName": "[toLower(take(uniqueString(subscription().subscriptionId, resourceGroup().id), 6))]",
        "location": "[resourceGroup().location]",
        "FQDN": "[concat('sccloudmine',toLower(take(uniqueString(subscription().subscriptionId, resourceGroup().id), 6)))]",
        "networkInterfaceName": "[concat('nic',toLower(take(uniqueString(subscription().subscriptionId, resourceGroup().id), 6)))]",
        "networkSecurityGroupName": "[concat('nsg',toLower(take(uniqueString(subscription().subscriptionId, resourceGroup().id), 6)))]",
        "subnetName": "default",
        "virtualNetworkName": "[concat('vnet',toLower(take(uniqueString(subscription().subscriptionId, resourceGroup().id), 6)))]",
        "publicIPAddressName": "[concat('ip',toLower(take(uniqueString(subscription().subscriptionId, resourceGroup().id), 6)))]",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', variables('subnetName'))]",
        "VHDUri": "https://latrobeagribioapp.blob.core.windows.net/vhd/OSdisk.vhd",
        "diskSizeGb": 256,
        "diskName": "[concat('OSDisk',toLower(take(uniqueString(subscription().subscriptionId, resourceGroup().id), 6)))]",
        "virtualMachineSize": {
          "4-CPUs,16GB-RAM": "Standard_B4ms",
          "8-CPUs,32GB-RAM": "Standard_B8ms",
          "16-CPUs,64GB-RAM": "Standard_B16ms"
        },
        "vhdStorageName": "[concat('stvhd', uniqueString(resourceGroup().id))]",
        "vhdStorageType": "Standard_LRS"

    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('vhdStorageName')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "tags": {
              "displayName": "StorageAccount"
            },
            "properties": {
              "accountType": "[variables('vhdStorageType')]"
            }
         },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-05-01",
            "name": "[variables('networkInterfaceName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIPAddresses', variables('publicIPAddressName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('networkSecurityGroupName')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                {
                    "name": "Port_80",
                    "properties": {
                        "priority": 100,
                        "protocol": "TCP",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "80"
                    }
                }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "[variables('virtualNetworkName')]",
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes":  [
                            "172.16.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "172.16.0.0/24"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2019-02-01",
            "name": "[variables('publicIPAddressName')]",
            "location": "[variables('location')]",
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIpAllocationMethod": "Static",
                "dnsSettings": {
                    "domainNameLabel": "[variables('FQDN')]"
                    }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-07-01",
            "name": "[variables('virtualMachineName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', variables('vhdStorageName'))]",
                "[resourceId('Microsoft.Network/networkInterfaces/', variables('networkInterfaceName'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('virtualMachineSize')[parameters('Resources')]]"
                },
                "storageProfile": {
                    "osDisk": {
                        "name": "osdisk",
                        "osType": "Windows",
                        "vhd": {
                            "uri": "[variables('VHDUri')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "Attach"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2020-12-01",
                    "type": "extensions",
                    "name": "CustomScriptExtension",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[variables('virtualMachineName')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.8",
                        "autoUpgradeMinorVersion": true,
                        "protectedSettings": {},
                        "settings":{
                            "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File configureAppSettings.ps1 ', ' ', parameters('username'), ' ' , base64(parameters('password')), ' ', reference(variables('publicIPAddressName')).dnsSettings.fqdn)]",
                            "fileUris": [
                                "https://latrobeagribioapp.blob.core.windows.net/vhd/configureAppSettings.ps1"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {
      "fqdn": {
        "value": "[reference(variables('publicIPAddressName')).dnsSettings.fqdn]",
        "type": "string"
      },
      "subscriptionId": {
        "type": "string",
        "value": "[subscription().subscriptionId]"
      },
      "resourceGroupName": {
        "type": "string",
        "value": "[resourceGroup().name]"
      },
      "deployedVirtualMachineName": {
        "type": "string",
        "value": "[variables('virtualMachineName')]"
      }
  }
}